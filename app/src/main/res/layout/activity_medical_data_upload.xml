<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signUP_activity"
    android:background="@drawable/detailsdesign"
    >

        <ImageButton
            android:id="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
           />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Details"
        android:fontFamily="@font/opensans"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_toEndOf="@id/backarrow"
        android:layout_marginStart="8dp"
        android:layout_alignParentEnd="true"
        />

        <TextView
            android:id="@+id/ui_submit_MedicalData_Button_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Next"
            android:textStyle="bold"
            android:fontFamily="@font/opensans"
            android:textSize="17sp"
            android:textColor="#BB346F"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/backarrow"
        android:gravity="center"
        android:layout_margin="5dp"
        >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Weight"
            android:textColor="#8C2C6D"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/weight_ui_EditText"
            android:hint="Weight (KG)"
            android:inputType="number"
            android:maxLines="1"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:fontFamily="@font/arial"
            />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Height"
            android:textColor="#8C2C6D"
            android:textSize="11dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/Height_ui_EditText"
            android:hint="Height (CM)"
            android:inputType="number"
            android:maxLines="1"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:fontFamily="@font/arial"
            />
            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="BloodPressure"
            android:textColor="#8C2C6D"
            android:textSize="11dp"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/blood_ui_EditText"
            android:hint="Blood pressure (optional)"
            android:inputType="number"
            android:maxLines="1"
            android:layout_width="220dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawablePadding="10dp"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:fontFamily="@font/arial"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="HeartRate"
            android:textColor="#8C2C6D"
            android:textSize="11dp"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/Heartrate_ui_EditText"
            android:hint="Heart Rate (optional)"
            android:inputType="number"
            android:maxLines="1"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawablePadding="10dp"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:fontFamily="@font/arial"
            android:visibility="gone"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:text="Age"
            android:textColor="#8C2C6D"
            android:textSize="11dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/age_ui_EditText"
            android:hint="Age"
            android:inputType="number"
            android:maxLines="1"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawablePadding="10dp"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:fontFamily="@font/arial"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are You Vegetarian ?!"
            android:fontFamily="@font/opensans"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_marginTop="16dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup_veg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Vegetarian_ui_EditText_yes"
                android:text="Yes"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8C2C6D"
                android:paddingHorizontal="10dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Vegetarian_ui_EditText_no"
                android:text="No"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8C2C6D"
                android:paddingHorizontal="10dp"
                />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have a  Diabetes ?!"
           android:textColor="#0A0A0A"
            android:gravity="center"
            android:fontFamily="@font/opensans"
            android:textSize="17dp"
            />


        <RadioGroup
            android:id="@+id/radioGroup_Diabetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="2dp"
            android:layout_margin="2dp"

            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Diabetes_ui_EditText_yes"
                android:text="Yes"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8C2C6D"
                android:paddingHorizontal="10dp"
                ></RadioButton>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/Diabetes_ui_EditText_no"
                android:text="No"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8C2C6D"
                android:paddingHorizontal="10dp"
                ></RadioButton>
        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have a  Blood pressure disease ?!"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:fontFamily="@font/opensans"
            android:textSize="17dp"
            android:padding="2dp"
            />


        <RadioGroup
            android:id="@+id/radioGroup_blood_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="2dp"
            android:layout_margin="2dp"

            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/blood_pressure_ui_EditText_yes"
                android:text="Yes"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8C2C6D"
                android:paddingHorizontal="10dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/blood_pressure_ui_EditText_no"
                android:text="No"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8C2C6D"
                android:paddingHorizontal="10dp"
                />
        </RadioGroup>



        <ProgressBar
            android:id="@+id/main_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:visibility="gone"/>


    </LinearLayout>


    </RelativeLayout>