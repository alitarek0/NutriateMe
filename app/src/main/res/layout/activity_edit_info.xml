<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditInfoActivity"
    android:weightSum="10"
    android:background="@drawable/editinfodesign"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        >


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
           >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Weight"
                android:textColor="#8C2C6D"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editinfo_weight"
                android:hint="Weight (KG)"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#0A0A0A"
                android:gravity="center"
                android:fontFamily="@font/arial"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Hieght"
                android:textColor="#8C2C6D"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editinfo_hieght"
                android:hint="Height (CM)"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#0A0A0A"
                android:gravity="center"
                android:fontFamily="@font/arial"
                />
    </LinearLayout>
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#8C2C6D"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="Username"/>
            <EditText
                android:id="@+id/editinfo_name"
                android:hint="Username"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#0A0A0A"
                android:gravity="center"
                android:fontFamily="@font/arial"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#8C2C6D"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="phonenumber"/>
            <EditText
                android:id="@+id/editinfo_phonenumber"
                android:inputType="number"
                android:maxLines="1"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#0A0A0A"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:hint="Phonenumber"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are You Vegetarian ?!"
            android:fontFamily="@font/opensans"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_marginTop="8dp"
            />


        <RadioGroup
            android:id="@+id/radioGroup_vegetrian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"

            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/veg1_ui_EditText_yes"
                android:text="Yes"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8C2C6D"
                android:paddingHorizontal="10dp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/veg1_ui_EditText_no"
                android:text="No"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8C2C6D"
                android:paddingHorizontal="10dp"
                />
        </RadioGroup>



        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have a  Diabetes ?!"
                android:fontFamily="@font/opensans"
                android:textColor="#0A0A0A"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_marginTop="8dp"
                />


            <RadioGroup
                android:id="@+id/radioGroup_Diabetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="2dp"

                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/editInfo_Diabetesyes"
                    android:text="Yes"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#8C2C6D"
                    android:paddingHorizontal="10dp"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/editInfo_Diabetesno"
                    android:text="No"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#8C2C6D"
                    android:paddingHorizontal="10dp"
                    />
            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have a  Blood pressure disease ?!"
                android:fontFamily="@font/opensans"
                android:textColor="#0A0A0A"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_marginTop="8dp"
                />


            <RadioGroup
                android:id="@+id/radioGroup_blood_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="2dp"

                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/editInfo_bloodyes"
                    android:text="Yes"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#8C2C6D"
                    android:paddingHorizontal="10dp"
                    ></RadioButton>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/editInfo_bloodno"
                    android:text="No"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#8C2C6D"
                    android:paddingHorizontal="10dp"
                    />
            </RadioGroup>




            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/editInfo_submit"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:text="Sumbit"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:background="@drawable/nav_gradient5"
                android:textColor="@color/btn_Text_color"
                android:layout_gravity="center"
                />
        <ProgressBar
            android:id="@+id/main_progress_edit_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            />


    </LinearLayout>

</LinearLayout>